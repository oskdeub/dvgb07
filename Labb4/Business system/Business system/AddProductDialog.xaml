<ContentDialog
    x:Class="Business_system.AddProductDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Business_system"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Add new Product"
    PrimaryButtonText="Add"
    SecondaryButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick">

    <StackPanel>
		<ComboBox Name="ProductComboBox" SelectionChanged="ProductComboBox_SelectionChanged" PlaceholderText="Choose Product">
			<ComboBoxItem Content="Book"></ComboBoxItem>
			<ComboBoxItem Content="Movie"></ComboBoxItem>
			<ComboBoxItem Content="Videogame"></ComboBoxItem>
		</ComboBox>

		<StackPanel Name="InputPanel">
			<TextBox Header="Name"></TextBox>
			<StackPanel Name="DynamicPanel">
				
			</StackPanel>
			<TextBox Header="Price"></TextBox>
			<TextBox Header="Qty"></TextBox>
		</StackPanel>
		
    </StackPanel>
</ContentDialog>
